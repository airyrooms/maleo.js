  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Build example",
      "program": "${workspaceFolder}/example/airy-web.js",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.11.0/bin/node",
      "cwd": "${workspaceFolder}/example"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server example",
      "program": "${workspaceFolder}/example/.zones/server.js",
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.11.0/bin/node",
      "cwd": "${workspaceFolder}/example",
      "outFiles": [
        "${workspaceFolder}/example/dist/*.js",
        "${workspaceFolder}/example/dist/**/*.js",
        "${workspaceFolder}/example/.zones/*.js",
        "${workspaceFolder}/example/.zones/**/*.js",
        "${workspaceFolder}/packages/airy-zones/lib/*.js",
        "${workspaceFolder}/packages/airy-zones/lib/**/*.js"
      ]
    }
  ]
}