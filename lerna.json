{
  "lerna": "3.7.2",
  "version": "0.0.1",
  "packages": [
    "packages/**"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "useWorkspaces": true,
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "master",
        "canary"
      ],
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "*.md",
        "*.test.*",
        "example/**",
        "__test__/**"
      ]
    }
  }
}
