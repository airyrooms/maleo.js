{
  "lerna": "3.7.2",
  "version": "independent",
  "packages": [
    "packages/**"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "useWorkspaces": true,
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "npmClient": "npm",
      "message": "chore(package.json): release",
      "allowBranch": [
        "master",
        "canary"
      ],
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "*.md",
        "*.test.*",
        "example/**",
        "**/__test__/**"
      ]
    }
  }
}
