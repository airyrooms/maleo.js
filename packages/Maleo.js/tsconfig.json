{
    "compilerOptions": {
        "rootDir": ".",        
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@build/*": [
                "src/build/*"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@server/*": [
                "src/server/*"
            ],
            "@client/*": [
                "src/client/*"
            ],
            "@render/*": [
                "src/render/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ]
        },

        "declaration": true,
        "declarationDir": "@types",
        "outDir": "@types",
        "sourceMap": true,

        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        
        "moduleResolution": "node",
        "noEmit": true,
        "lib": [
            "es5",
            "es2015",
            "dom",
            "scripthost"
        ],

        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "preserveSymlinks": true,
        "esModuleInterop": true
    },

    "exclude": [
        "dist",
        "lib",
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js", 
        "globals.d.ts"
    ]
}